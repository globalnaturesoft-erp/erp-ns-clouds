<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("domain_name") %>
                <th class="sortable" sort-by='erp_ns_clouds_accounts.domain'>
                    <%= t('.domain_name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("name") %>
                <th><%= t('.name') %></th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th><%= t('status') %></th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th><%= t('creator') %></th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_ns_clouds_accounts.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @accounts.each do |account| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: account.id) %>
                </td>
                <% if get_columns(params).include?("domain_name") %>
                    <td><%= link_to account.domain, erp_ns_clouds.edit_backend_account_path(account) %></td>
                <% end %>
                <% if get_columns(params).include?("name") %>
                    <td><%= account.name %></td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <% if account.archived == true %>
                    <span class="label label-sm label-danger"><%= t('archived') %></span>
                    <% else %>
                    <span class="label label-sm label-success"><%= t('active') %></span>
                    <% end %> 
                </td>
                <% if get_columns(params).include?("creator") %>
                    <td>
                        <%= erp_component('avatar', {
                            user: account.creator
                        }) %>
                    </td>
                <% end %>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= account.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('edit'),
                                href: erp_ns_clouds.edit_backend_account_path(account)
                            },
                            {
                                text: '<i class="fa fa-remove"></i> '+t('archive'),
                                url: erp_ns_clouds.archive_backend_accounts_path(id: account),
                                data_method: 'PUT',
                                hide: account.archived,
                                class: 'ajax-link'
                            },
                            {
                                text: '<i class="fa fa-check"></i> '+t('unarchive'),
                                url: erp_ns_clouds.unarchive_backend_accounts_path(id: account),
                                data_method: 'PUT',
                                hide: !account.archived,
                                class: 'ajax-link'
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                url: erp_ns_clouds.backend_account_path(account),
                                data_method: 'DELETE',
                                class: 'ajax-link',
                                data_confirm: t('delete_confirm')
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @accounts.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>
        
<%= erp_datalist_pagination(@accounts) %>