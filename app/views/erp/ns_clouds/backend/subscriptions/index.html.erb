<% content_for :title do %>
    <%= t('.subscriptions') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text-o"></i> <%= t('.subscriptions') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_ns_clouds.new_backend_subscription_path,
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_ns_clouds.list_backend_subscriptions_path,
    keywords: [
        {
            text: t('.account_name'), name: 'erp_ns_clouds_subscriptions.account_name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
            url: erp_ns_clouds.archive_all_backend_subscriptions_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-eye"></i> '+t('unarchive'),
            url: erp_ns_clouds.unarchive_all_backend_subscriptions_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_ns_clouds.delete_all_backend_subscriptions_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
        {
            text: t('.subscription_archived'), name: 'show_archived', value: true, checked: false
        },
    ],
    columns: [
        {
            text: t('.account_name'), name: 'account_name', value: true, checked: true
        },
        {
            text: t('.plan_name'), name: 'plan_name', value: true, checked: true
        },
        {
            text: t('.quantity'), name: 'quantity', value: true, checked: true
        },
        {
            text: t('.registed_at'), name: 'registed_at', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_ns_clouds_subscriptions.registed_at', sort_direction: 'desc' }
) %>