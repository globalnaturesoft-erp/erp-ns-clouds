<% content_for :title do %>
    <%= @plan.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_ns_clouds.backend_plans_path %>">
    <i class="fa fa-list"></i> <%= t('.plans') %>
    </a> / <%= @plan.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_ns_clouds.new_backend_plan_path,
        class: 'btn-sm'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @plan.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', plan: @plan %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>