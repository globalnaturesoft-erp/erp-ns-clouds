<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_ns_clouds_plans.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("price") %>
                <th>
                    <%= t('.price') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th>
                    <%= t('creator') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_ns_clouds_plans.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @plans.each do |plan| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: plan.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                    <td><%= link_to plan.name, erp_ns_clouds.edit_backend_plan_path(plan) %></td>
                <% end %>
                <% if get_columns(params).include?("price") %>
                    <td><%= format_number(plan.price) %> VNƒê</td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <% if plan.archived == true %>
                    <span class="label label-sm label-danger"><%= t('archived') %></span>
                    <% else %>
                    <span class="label label-sm label-success"><%= t('active') %></span>
                    <% end %> 
                </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <td>
                        <%= erp_component('avatar', {
                            user: plan.creator
                        }) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= plan.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('edit'),
                                href: erp_ns_clouds.edit_backend_plan_path(plan)
                            },
                            {
                                text: '<i class="fa fa-remove"></i> '+t('archive'),
                                url: erp_ns_clouds.archive_backend_plans_path(id: plan),
                                data_method: 'PUT',
                                hide: plan.archived,
                                class: 'ajax-link'
                            },
                            {
                                text: '<i class="fa fa-check"></i> '+t('unarchive'),
                                url: erp_ns_clouds.unarchive_backend_plans_path(id: plan),
                                data_method: 'PUT',
                                hide: !plan.archived,
                                class: 'ajax-link'
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                url: erp_ns_clouds.backend_plan_path(plan),
                                data_method: 'DELETE',
                                class: 'ajax-link',
                                data_confirm: t('delete_confirm')
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @plans.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>
        
<%= erp_datalist_pagination(@plans) %>